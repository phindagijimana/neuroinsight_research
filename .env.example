# NeuroInsight Research Configuration
# Copy this file to .env and adjust values as needed.

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Server
# Port range: 3000-3050 (Frontend: 3000, Backend: 3001)
API_HOST=0.0.0.0
API_PORT=3001

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://neuroinsight:neuroinsight_secure_password@localhost:5432/neuroinsight
# Fallback to SQLite (single-user only, no concurrency):
# DATABASE_URL=sqlite:///./neuroinsight_research.db

# --- Redis (Celery broker + result backend) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# --- MinIO (Object storage for inputs/outputs) ---
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_secure
MINIO_SECURE=false

# Data Directories (local filesystem, used alongside MinIO)
DATA_DIR=./data
UPLOAD_DIR=./data/uploads
OUTPUT_DIR=./data/outputs
PIPELINES_DIR=./pipelines

# Execution Backend
# Options: local (Docker), slurm (HPC)
BACKEND_TYPE=local
MAX_CONCURRENT_JOBS=4

# Celery Workers
CELERY_CONCURRENCY=2

# HPC Configuration (for SLURM backend)
HPC_HOST=hpc.university.edu
HPC_USER=username
HPC_SSH_PORT=22
# HPC_SSH_KEY_PATH=~/.ssh/id_rsa  # Omit to use SSH agent
HPC_WORK_DIR=/scratch/username/neuroinsight
HPC_PARTITION=general
# HPC_ACCOUNT=my_allocation
# HPC_QOS=normal
HPC_CONTAINER_RUNTIME=singularity
# HPC_MODULES=singularity/3.8,cuda/11.8

# Security (must be at least 32 characters)
SECRET_KEY=change-this-in-production-must-be-at-least-32-characters
